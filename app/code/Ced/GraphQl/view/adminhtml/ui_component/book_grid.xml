<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="context" xsi:type="configurableObject">
        <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\Context</argument>
        <argument name="namespace" xsi:type="string">book_grid</argument>
    </argument>
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">book_grid.book_grid_data_source</item>
            <item name="deps" xsi:type="string">book_grid.book_grid_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">book_grid_columns</item>
        <item name="buttons" xsi:type="array">
            <item name="add" xsi:type="array">
                <item name="name" xsi:type="string">add</item>
                <item name="label" xsi:type="string" translate="true">Add New Book</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="url" xsi:type="string">*/*/new</item>
            </item>
        </item>
    </argument>
     <dataSource name="book_grid_data_source">
      
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider</argument>
            <argument name="name" xsi:type="string">book_grid_data_source</argument>
           
            <argument name="primaryFieldName" xsi:type="string">id</argument>
           
            <argument name="requestFieldName" xsi:type="string">id</argument>
          
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">id</item>
                    </item>
                </item>
            </argument>
     
        </argument>
    </dataSource>
    <listingToolbar name="listing_top">
        <argument name="data" xsi:type="array">
        </argument>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="book_grid_columns">
     
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">id</item>
                </item>
            </argument>
        </selectionsColumn>
       
        <column name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sorting" xsi:type="string">asc</item>
                    <item name="label" xsi:type="string" translate="true">ID</item>
                </item>
            </argument>
        </column>
        <column name="book_name">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="component" xsi:type="string">Magento_Ui/js/grid/columns/column</item>
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" xsi:type="string" translate="true">Book Name</item>
					<item name="sortOrder" xsi:type="number">21</item>
				</item>
			</argument>
		</column>
		<column name="isbn_no">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="string">text</item>
					<item name="component" xsi:type="string">Magento_Ui/js/grid/columns/column</item>
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" xsi:type="string" translate="true">ISBN No</item>
					<item name="sortOrder" xsi:type="number">22</item>
				</item>
			</argument>
		</column>

		<column name="author" class ="Ced\GraphQl\Ui\Column\Listing\AuthorName">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="filter" xsi:type="boolean">false</item>
					<item name="component" xsi:type="string">Magento_Ui/js/grid/columns/column</item>
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" xsi:type="string" translate="true">Author Name</item>
					<item name="sortOrder" xsi:type="number">30</item>
				</item>
			</argument>
		</column>
        <column name="publish_date" class="Magento\Ui\Component\Listing\Columns\Date">
            <argument name="data" xsi:type="array">
		        <item name="config" xsi:type="array">
		            <item name="filter" xsi:type="string">dateRange</item>
		            <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/date</item>
		            <item name="dataType" xsi:type="string">date</item>
		            <item name="label" xsi:type="string" translate="true">Publish Date</item>
		        </item>
    		</argument>
        </column>
        <column name="mrp" class="Ced\GraphQl\Ui\Column\Listing\Mrp">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="boolean">false</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/column</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">MRP</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                </item>
            </argument>
        </column>
        
         <actionsColumn name="actions" class="Ced\GraphQl\Ui\Column\Listing\BookAction">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="indexField" xsi:type="string">id</item>
					<item name="sortOrder" xsi:type="number">100</item>
				</item>
			</argument>
		</actionsColumn>
        
    </columns>
</listing>
